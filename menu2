title = 'Simple Menu'

funList = {}

funList.hello = function ()
  menu.Menu:writeStatus('Hello my friend!')
  loadMenu(root)
end

funList.greetings = function ()
  menu.Menu:writeStatus('Nice meeting you.')
  loadMenu(surprise)
end

funList.goodbye = function ()
  term.clear()
  menu.Menu:printCentered('DIE TRECHOROUS FIEND!!!',9)
  sleep(2)
  menu.Menu:indentLeft('DIE',5,4)
  sleep(0.5)
  menu.Menu:indentLeft('DIE',16,30)
  sleep(0.5)
  menu.Menu:indentLeft('DIE',7,45)
  sleep(5)
  term.clear()
  term.setCursorPos(1,1)
end

root = {
  'Hello', 'hello',
  'I must go...', 'greetings'
  }

surprise = {
  'Adios Amigos', 'goodbye'
  }
